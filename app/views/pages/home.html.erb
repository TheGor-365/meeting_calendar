<h1>Wellcome</h1>

<h3 class="my-5">Day Calendar</h3>
<%= month_calendar() do |date| %>
  <div class="day">
    <%= date.day %>
  </div>
<% end %>

<h3 class="my-5">Date Calendar</h3>
<%= month_calendar(events: @meetings) do |date| %>
  <div class="day">
    <%= date %>
  </div>
<% end %>

<h3 class="my-5">Date Calendar with meetings</h3>
<%= month_calendar(events: @meetings) do |date, meetings| %>
  <div class="day">
    <%= date.day %>
  </div>

  <% meetings.each do |meeting| %>
    <div class="p-3">
      <div class="card-header card">
        <div class="card-title">
          <strong>
            <%= link_to meeting.title, meeting, class: "text-danger" %>
          </strong>
        </div>
      </div>

      <div class="card-body card">
        <small class="card-text">
          <%= meeting.description %>
        </small>
      </div>

      <div class="card-footer text-muted my-3">
        <small class="card-text">
          From:
        </small>
        <small class="float-end">
          <%= meeting.start_time.to_s(:time) %>
        </small><br>
        <small class="card-text">
          To:
        </small>
        <small class="float-end">
          <%= meeting.end_time.to_s(:time) %>
        </small>
      </div>
    </div>
  <% end %>
<% end %>
